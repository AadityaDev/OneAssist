<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/dimen_8dp"
    app:cardElevation="@dimen/dimen_8dp"
    app:cardBackgroundColor="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_8dp"
    >

    <!--<RelativeLayoutativeLayout-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content">-->
        <!---->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_8dp"
            >

            <com.aditya.gyandhan.uicomponents.RoundedImageView
                android:id="@+id/contact_pic"
                android:layout_width="@dimen/dimen_48dp"
                android:layout_height="@dimen/dimen_48dp"
                />

            <TextView
                android:id="@+id/contact_text_pic"
                android:layout_width="@dimen/dimen_48dp"
                android:layout_height="@dimen/dimen_48dp"
                android:background="@color/blue"
                android:textColor="@color/white"
                android:textSize="@dimen/text_20sp"
                android:maxLength="1"
                android:maxLines="1"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/contact_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/contact_pic"
                android:layout_toEndOf="@+id/contact_pic"
                android:textColor="@color/black"
                android:textSize="@dimen/text_22sp"
                android:maxLines="1"
                android:paddingLeft="@dimen/dimen_8dp"
                android:paddingStart="@dimen/dimen_8dp"
                android:paddingRight="@dimen/dimen_8dp"
                android:paddingEnd="@dimen/dimen_8dp"
                />

            <TextView
                android:id="@+id/contact_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/contact_name"
                android:layout_toRightOf="@+id/contact_pic"
                android:layout_toEndOf="@+id/contact_pic"
                android:textColor="@color/black"
                android:textSize="@dimen/text_18sp"
                android:maxLines="1"
                android:paddingLeft="@dimen/dimen_8dp"
                android:paddingStart="@dimen/dimen_8dp"
                android:paddingRight="@dimen/dimen_8dp"
                android:paddingEnd="@dimen/dimen_8dp"
                />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_below="@+id/contact_number"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:paddingBottom="@dimen/dimen_8dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <CalendarView
                    android:id="@+id/calendar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </CalendarView>

                <TimePicker
                    android:id="@+id/time_picker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/calendar"
                    ></TimePicker>

                    <TextView
                        android:id="@+id/book_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/time_picker"
                        android:background="@color/blue"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_20sp"
                        android:textStyle="bold"
                        android:text="Confirm Appointment"
                        android:gravity="center"
                        android:padding="@dimen/dimen_8dp"
                        android:layout_marginTop="@dimen/dimen_8dp"
                        android:layout_marginBottom="@dimen/dimen_8dp"
                        />

                </RelativeLayout>


            </android.support.v7.widget.CardView>

        </RelativeLayout>


    <!--</RelativeLayout>-->

</android.support.v7.widget.CardView>